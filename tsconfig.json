{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@app/assets/*": [
        "assets/*"
      ],
      "@app/environments/*": [
        "environments/*"
      ],
      "@app/core/*": [
        "app/core/*"
      ],
      "@app/modules/*": [
        "app/modules/*"
      ],
      "@app/shared/*": [
        "app/shared/*"
      ],
      "@app/account/*": [
        "app/modules/account/*"
      ]
    }
  }
}
